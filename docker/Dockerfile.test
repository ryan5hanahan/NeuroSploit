# sploit.ai - Test Runner Image
# Runs all tests (unit, integration, benchmark) inside Docker.
#
# Build:
#   docker compose -f docker-compose.test.yml build test-runner
#
# Usage:
#   docker compose -f docker-compose.test.yml run --rm test-runner tests/ -m "not integration"
#   docker compose -f docker-compose.test.yml up --abort-on-container-exit --exit-code-from test-runner

FROM python:3.11-slim

# Install system dependencies (Docker CLI for DinD support, git, curl for healthchecks)
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    ca-certificates \
    gnupg \
    lsb-release \
    && install -m 0755 -d /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/debian/gpg \
       | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
    && chmod a+r /etc/apt/keyrings/docker.gpg \
    && echo \
       "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
       https://download.docker.com/linux/debian $(lsb_release -cs) stable" \
       > /etc/apt/sources.list.d/docker.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends docker-ce-cli \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy dependency files first for layer caching
COPY backend/requirements.txt backend/requirements.txt
COPY pyproject.toml .

# Install backend deps + test deps
RUN pip install --no-cache-dir \
    -r backend/requirements.txt \
    pytest>=7.4.0 \
    pytest-asyncio>=0.23.0 \
    pytest-cov>=4.0.0 \
    pytest-docker>=2.0.0 \
    pyyaml>=6.0.0 \
    && pip install --no-cache-dir -e .

# Copy application code
COPY backend/ backend/
COPY tests/ tests/
COPY benchmark/ benchmark/
COPY techniques/ techniques/
COPY prompts/ prompts/

# Create results directory
RUN mkdir -p /app/results

ENTRYPOINT ["pytest"]
CMD ["tests/", "-v", "--tb=short"]
