# NeuroSploit v3 Environment Variables
# =====================================
# Copy this file to .env and configure your settings.
# At minimum, set ONE LLM API key or configure a local model.

# =============================================================================
# LLM API Keys (set at least one)
# =============================================================================

# Anthropic Claude: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# OpenRouter (multi-model): https://openrouter.ai/keys
OPENROUTER_API_KEY=

# =============================================================================
# AWS Bedrock (uses standard AWS credential chain)
# =============================================================================
# Authenticate via env vars, ~/.aws/credentials, IAM role, or SSO.
# No API key needed - just valid AWS credentials with Bedrock access.

#AWS_ACCESS_KEY_ID=
#AWS_SECRET_ACCESS_KEY=
#AWS_SESSION_TOKEN=
#AWS_PROFILE=default
AWS_BEDROCK_REGION=us-east-1
#AWS_BEDROCK_MODEL=us.anthropic.claude-sonnet-4-6-v1:0

# =============================================================================
# Local LLM (no API key needed)
# =============================================================================

# Ollama: https://ollama.ai
#OLLAMA_BASE_URL=http://localhost:11434

# LM Studio: https://lmstudio.ai
#LMSTUDIO_BASE_URL=http://localhost:1234

# =============================================================================
# LLM Configuration
# =============================================================================

# Max output tokens (up to 64000 for Claude). Comment out for profile defaults.
#MAX_OUTPUT_TOKENS=64000

# Task-type model routing (routes to different LLM profiles per task)
ENABLE_MODEL_ROUTING=false

# Per-tier model overrides (used when model routing is enabled)
#LLM_MODEL_FAST=claude-haiku-4-5-20251001
#LLM_MODEL_BALANCED=claude-sonnet-4-6
#LLM_MODEL_DEEP=claude-opus-4-6

# =============================================================================
# Cost Tracking
# =============================================================================

# Maximum USD budget per scan (pauses if exceeded)
#COST_BUDGET_PER_SCAN=5.00

# Percentage of budget at which to emit a warning
#COST_WARN_AT_PCT=80

# Enable/disable cost tracking entirely
#ENABLE_COST_TRACKING=true

# =============================================================================
# Feature Flags
# =============================================================================

# Bug bounty dataset cognitive augmentation
ENABLE_KNOWLEDGE_AUGMENTATION=false

# Playwright browser-based validation + screenshot capture
ENABLE_BROWSER_VALIDATION=false

# Claude extended thinking for deeper exploit reasoning
ENABLE_EXTENDED_THINKING=false

# Cross-session learning: remember payloads and fingerprints
ENABLE_PERSISTENT_MEMORY=true

# Structured tracing for agent decisions, tool calls, token usage
ENABLE_TRACING=false

# HackerOne scope parsing and duplicate detection
ENABLE_BUGBOUNTY_INTEGRATION=false

# =============================================================================
# Security Testing
# =============================================================================

# WAF evasion: auto-apply encoding/bypass techniques when WAF detected
ENABLE_WAF_EVASION=true

# Minimum WAF detection confidence (0.0-1.0) before applying evasion
#WAF_CONFIDENCE_THRESHOLD=0.7

# Pivot away from a vuln type when avg confidence drops below this (0-100)
#CONFIDENCE_PIVOT_THRESHOLD=30

# Reject a vuln type after 3+ failures when avg confidence is below this (0-100)
#CONFIDENCE_REJECT_THRESHOLD=40

# =============================================================================
# Scan Settings
# =============================================================================

# Maximum number of scans running simultaneously
#MAX_CONCURRENT_SCANS=3

# Default scan type: full, quick, or custom
#DEFAULT_SCAN_TYPE=full

# Enable reconnaissance phase by default for new scans
#RECON_ENABLED_BY_DEFAULT=true

# Use more payloads and bypass techniques (slower but more thorough)
#AGGRESSIVE_MODE=false

# Default HTTP request timeout in seconds
#DEFAULT_TIMEOUT=30

# Rate limit: max requests per second per target
#MAX_REQUESTS_PER_SECOND=10

# =============================================================================
# OSINT API Keys (optional — enables passive reconnaissance)
# =============================================================================

#SHODAN_API_KEY=
#CENSYS_API_ID=
#CENSYS_API_SECRET=
#VIRUSTOTAL_API_KEY=
#BUILTWITH_API_KEY=

# =============================================================================
# Bug Bounty (optional — HackerOne integration)
# =============================================================================

#HACKERONE_API_TOKEN=
#HACKERONE_USERNAME=

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./data/neurosploit.db

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
